<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.PasswordChangeActivity">
    <TextView
        android:id="@+id/tv_password_change_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_current_password"/>
    <TextView
        android:id="@+id/tv_password_change_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경을 위해\n현재 비밀번호를 입력해 주세요 "
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_password_change_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_change_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_current_password"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#F2F2F2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_after_password">
        <EditText
            android:id="@+id/et_current_password"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="현재 비밀번호"
            android:background="@drawable/round_btn"
            android:backgroundTint="#F2F2F2"
            android:padding="20dp"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_after_password"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#F2F2F2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_after_password_check">
        <EditText
            android:id="@+id/et_after_password"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@null"
            android:hint="새 비밀번호"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="20dp"
            android:textColorHint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_after_password"/>
        <ImageView
            android:id="@+id/iv_after_password"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_after_password"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_after_password_check"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#F2F2F2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/password_change_btn">
        <EditText
            android:id="@+id/et_after_password_check"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@null"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="20dp"
            android:textColorHint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_after_password_check"/>
        <ImageView
            android:id="@+id/iv_after_password_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_after_password_check"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <android.widget.Button
        android:id="@+id/password_change_btn"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginHorizontal="27dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/first_blue"
        android:fontFamily="@font/poppins_bold"
        android:text="비밀번호 변경"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="49dp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>