<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.SignUpActivity">

    <ImageView
        android:id="@+id/signup_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signup_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="가입하기"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/layout_email_text"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_email_text"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#F2F2F2"
        app:layout_constraintBottom_toTopOf="@id/layout_password_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/login_email_et"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@null"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="20dp"
            android:textColorHint="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_password_text"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#F2F2F2"
        app:layout_constraintBottom_toTopOf="@id/signup_agreement_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@null"
            android:hint="password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="20dp"
            android:textColorHint="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_lock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_lock"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/signup_agreement_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 이용에 돤한 동의"
        app:layout_constraintBottom_toBottomOf="@id/signup_agreement_cb"
        app:layout_constraintEnd_toStartOf="@id/signup_agreement_cb"
        app:layout_constraintTop_toTopOf="@id/signup_agreement_cb" />

    <CheckBox
        android:id="@+id/signup_agreement_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@id/signup_btn"
        app:layout_constraintEnd_toEndOf="@id/signup_btn" />

    <android.widget.Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/first_blue"
        android:fontFamily="@font/poppins_bold"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>