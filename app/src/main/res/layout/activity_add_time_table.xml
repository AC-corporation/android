<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">

        <TextView
            android:id="@+id/add_timetable_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="시간표 만들기"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/add_timetable_back_btn"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignBottom="@+id/add_timetable_title"
            android:layout_marginLeft="29dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

    </RelativeLayout>

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="100dp"
        android:layout_weight="1" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:buttonTint="@color/first_blue"
        android:text="빈 시간표 만들기"
        android:textSize="12dp" />


    <Button
        android:id="@+id/add_timetable_next_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/first_blue"
        android:text="다음"
        android:textSize="16dp"
        android:textStyle="bold" />

</LinearLayout>