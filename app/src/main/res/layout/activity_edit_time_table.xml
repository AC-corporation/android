<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">

        <TextView
            android:id="@+id/edit_timetable_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="수정하기"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/edit_timetable_back_btn"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignBottom="@+id/edit_timetable_title"
            android:layout_marginLeft="29dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_timetable_title"
            android:gravity="center"
            android:text="시간표 1"
            android:textSize="16dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </ScrollView>

    <Button
        android:id="@+id/edit_timetable_save_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/first_blue"
        android:text="저장"
        android:textSize="16dp"
        android:textStyle="bold" />

</LinearLayout>