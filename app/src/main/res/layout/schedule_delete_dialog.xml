<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="@drawable/round_dialog"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
            <TextView
                android:id="@+id/dialog_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과목 삭제"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/dialog_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간표에서 해당 과목을 삭제할까요?"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/dialog_text1"
                app:layout_constraintTop_toBottomOf="@id/dialog_text1"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_cancel_btn"
                android:text="취소"
                android:textColor="@color/first_blue"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/dialog_text2"
                app:layout_constraintTop_toBottomOf="@id/dialog_text2"
                />

            <Button
                android:id="@+id/dialog_okay_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제하기"
                android:textStyle="bold"
                android:background="@drawable/round_delete_btn"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="10sp"
                app:layout_constraintStart_toEndOf="@id/dialog_cancel_btn"
                app:layout_constraintTop_toTopOf="@id/dialog_cancel_btn"

                />
</androidx.constraintlayout.widget.ConstraintLayout>